@{
    ViewBag.Title = "Home Page";
}

<style>
    .jumbotron {
        position: relative;
        padding: 0px;
    }

    #imagenIndex {
        opacity: 0.3;
        width: 100%;
        height: 400px;
    }

    #tituloIndex {
        position: absolute;
        top: 10%;
        left: 3%;
    }

    #parrafoIndex {
        position: absolute;
        top: 33%;
        left: 3%;
        font-size: 29px;
    }
</style>

<div class="jumbotron" @*style="background-image: url('../../Content/AdminLTE-3.2.0/img/fondoIndex.png');"*@>
